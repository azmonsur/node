<div class="section">
    <form action="/auth/register" method="post">
        {{> _messages}}
        </div>
        <div class="section">
            <input type="email" id="email" name="email" class="width-70p" placeholder="Email" value="{{email}}">
        </div>
        <div class="section">
            <input type="text" id="username" name="username" class="width-70p" placeholder="Display name" value="{{username}}">
        </div>
        <div class="section">
            <input type="password" id="password" class="width-70p" name="password" placeholder="Password">
        </div>
        <div class="section">
            <input type="password" id="verify-password" class="width-70p" name="verify_password" placeholder="Verify Password">
        </div>
        <div class="section">
            <button id="submit" type="submit" class="btn white-text rounded-4 width-70p btn-blck red darken-1">Register</button>
        </div>
    </form>
</div>
<div class="divider"></div>
<div class="divider"></div>

<div class="section">
    Have an Account? 
    <a href="/auth/login" class="">Login</a>
</div>


<script>
    'use strict';
    let statusMsg = document.querySelector('#status-message');
    document.querySelector('#submit').addEventListener('click', e => {
        //e.preventDefault()
        // client code
        $.ajax({
            url: '/auth/local',
            type: 'POST',
            data: {username: document.getElementById('username').value},
            dataType: 'json',
            success: function (data=JSON.parse(data)) {
                if (data.status) {
                    statusMsg.classList.remove('error-message')
                    statusMsg.classList.add('success-message');
                    statusMsg.style.display = "block";
                    statusMsg.innerHTML = "Username available &check;"
                } else {
                    statusMsg.classList.remove('success-message')
                    statusMsg.classList.add('error-message');
                    statusMsg.style.display = "block";
                    statusMsg.innerHTML = "Invalid Username"
                }
            },
            error: function () {
            }
        });
    })
</script>