        const sidebar = document.querySelector('.sidenav');
        var instance = new M.Sidenav(sidebar);

        let formCategory = document.querySelector('#category');
        if (formCategory) {
            instance = new M.FormSelect(formCategory);
        }

        let formStatus = document.querySelector('#status');
        if (formStatus) instance = new M.FormSelect(formStatus);

        let formGender = document.querySelector('#gender');
        if (formGender) instance = new M.FormSelect(formGender);

        let storyBody = document.querySelector('#body')
        if (storyBody) {
            ClassicEditor
                .create(storyBody, {
                    //toolbar: ['heading', '|', 'bold', 'italic', 'link']
                })
                .then(editor => {
                    window.editor = editor;
                })
